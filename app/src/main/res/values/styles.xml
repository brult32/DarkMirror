<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item> <!-- removes title bar !!!!!!!! -->
        <item name="windowActionBar">false</item><!-- removes action bar !!!!!!!! -->
        <item name="android:windowFullscreen">true</item><!-- makes fullscreen !!!!!!!! -->
        <item name="android:windowContentOverlay">@null</item><!-- no overlay !!!!!!!! -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

</resources>
